<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E0F7FA">

    <include layout="@layout/toolbar2"
        android:id="@+id/toolbar2"/>



    <TextView
        android:id="@+id/PN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Name:"
        android:textSize="23dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/PN_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textColor="#313131"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/PN"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Author:"
        android:textColor="#000000"
        android:textSize="23dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_below="@+id/PN_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/A_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textColor="#313131"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/A"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:textSize="23dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/A_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/D_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textColor="#313131"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/D"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email id:"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:textSize="23dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/D_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/E_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textColor="#313131"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/E"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Number:"
        android:layout_marginLeft="15dp"
        android:textSize="23dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/E_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/C_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textColor="#313131"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/C"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#4d7dab"
        android:layout_margin="30dp"
        android:id="@+id/Btn_Apply"
        android:layout_below="@+id/C_value"
        />
    <Button
        android:id="@+id/discussions_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to discussions"
        android:layout_below="@+id/Btn_Apply"
        android:layout_centerHorizontal="true"
        android:background="@null"
        />
    <!--Button
        android:id="@+id/Btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" /-->

</RelativeLayout>
</ScrollView>